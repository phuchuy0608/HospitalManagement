@model HospitalManagement_Entities.Models.ViewModel.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title>NHÂN VIÊN - ĐĂNG NHẬP</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=0">

    <!-- Icons -->
    <!-- The following icons can be replaced with your own, they are used by desktop and mobile browsers -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <!-- END Icons -->
    <!-- Stylesheets -->
    <!-- Bootstrap is included in its original form, unaltered -->
    <link rel="stylesheet" href="~/MainElement/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/toastr.css">



    <!-- Related styles of various icon packs and plugins -->
    <link rel="stylesheet" href="~/MainElement/css/plugins.css">

    <!-- The main stylesheet of this template. All Bootstrap overwrites are defined in here -->
    <link rel="stylesheet" href="~/MainElement/css/main.css">

    <!-- Include a specific file here from css/themes/ folder to alter the default theme of the template -->
    <!-- The themes stylesheet of this template (for using specific theme color in individual elements - must included last) -->
    <link rel="stylesheet" href="~/MainElement/css/themes.css">
    <!-- END Stylesheets -->
    <!-- Modernizr (browser feature detection library) -->
    <script src="~/MainElement/js/vendor/modernizr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        #login-container .login-title {
            padding: 20px 10px;
            background: #444444;
            background: deepskyblue;
        }
    </style>
</head>
<body>
    <!-- Login Full Background -->
    <!-- For best results use an image with a resolution of 1280x1280 pixels (prefer a blurred image for smaller file size) -->
    <img src="~/MainElement/img/background.jpg" alt="Login Full Background" class="full-bg animation-pulseSlow">
    <!-- END Login Full Background -->
    <!-- Login Container -->
    <div id="login-container" class="animation-fadeIn" style="margin-top: -100px;">
        <!-- Login Title -->
        <div class="login-title text-center">
            <h1><strong>QUÊN MẬT KHẨU</strong><br></h1>
            <!-- <h1><strong>TES MEDICAL</strong><br><small>Please <strong>Login</strong> or <strong>Register</strong></small></h1> -->
        </div>
        <!-- END Login Title -->
        <!-- Login Block -->
        <div class="block push-bit">
            <!-- Login Form -->
            <form asp-action="ForgotPassword" id="form-login" class="form-horizontal form-bordered form-control-borderless">
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon" style="color: deepskyblue;"><i class="fad fa-envelope-open-text"></i></span>
                            <input asp-for="Email" type="text" class="form-control input-lg" placeholder="Email" required>

                        </div>
                        @if (ViewBag.Error != null)
                        {
                            <span class="text-danger" style="margin-left:50px;">@ViewBag.Error</span>
                        }
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-xs-12 text-center" style="margin-bottom: 10px;">

                        <button type="submit" class="btn" style="width: 250px; background-color: deepskyblue; color: white;">Nhận mật khẩu mới</button>
                    </div>
                    <div class="col-xs-12 text-center" style="margin-bottom: 10px;">
                        <a href="@Url.Action("ThemPhieuKham","TiepNhan")" class="btn" style="width: 250px; background-color: rgb(176 176 176); color: white;">Đăng nhập lại</a>
                    </div>


                </div>
            </form>
            <!-- END Login Form -->

        </div>
        <!-- END Login Block -->
    </div>
    <!-- END Login Container -->
    <!-- END Modal Terms -->
    <script src="~/MainElement/js/vendor/jquery.min.js"></script>
    <script src="~/MainElement/js/vendor/bootstrap.min.js"></script>
    <script src="~/MainElement/js/plugins.js"></script>
    <script src="~/MainElement/js/app.js"></script>
    <!-- jQuery, Bootstrap.js, jQuery plugins and Custom JS code -->
    <script src="js/vendor/jquery.min.js"></script>
    <script src="js/vendor/bootstrap.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/app.js"></script>

    <!-- Load and execute javascript code used only in this page -->
    <script src="js/pages/login.js"></script>
    <script>$(function () { Login.init(); });</script>
</body>
</html>