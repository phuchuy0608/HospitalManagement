@model List<TinTuc>

<style>
    .thumb {
        height: 200px;
        background-color: #3e3e3e;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }
</style>

<div class="row ltn__blog-slider-one-active slick-arrow-1 ltn__blog-item-3-normal">
    @foreach (var item in Model)
    {
        <div class="col-lg-12">
            <div class="ltn__blog-item ltn__blog-item-3">
                <div class="ltn__blog-img">
                    <a asp-controller="Home" asp-action="TinChiTiet" asp-route-id="@item.MaBaiViet"><div class="thumb" style="background-image: url(@item.Hinh);"></div></a>
                </div>
                <div class="ltn__blog-brief">
                    <h3 class="ltn__blog-title"><a asp-controller="Home" asp-action="TinChiTiet" asp-route-id="@item.MaBaiViet">@item.TieuDe</a></h3>
                    <div class="ltn__blog-meta">
                        <ul>
                            <li class="ltn__blog-tags">
                                <a href="#"><i class="fas fa-tags"></i>@item.MaTLNavigation.TenTL</a>
                            </li>
                        </ul>
                    </div>

                    <div class="ltn__blog-meta-btn">
                        <div class="ltn__blog-meta">
                            <ul>
                                <li class="ltn__blog-date"><i class="far fa-calendar-alt"></i>@item.ThoiGian?.ToString("dd/MM/yyyy h:mm tt")</li>
                            </ul>
                        </div>
                        <div class="ltn__blog-btn">
                            <a asp-controller="Home" asp-action="TinChiTiet" asp-route-id="@item.MaBaiViet">Đọc thêm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
